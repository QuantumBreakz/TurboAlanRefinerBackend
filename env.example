# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4.1

# Backend Security (Optional)
BACKEND_API_KEY=your_optional_api_key_here

# Refinement Settings
AGGRESSIVENESS=Auto
RANDOM_SEED=
BATCH_PACE_DELAY=0.5
MIN_WORD_RATIO=0.8
TARGET_SCANNER_RISK=25.0

# Google Drive Configuration
# Option 1: Use service account JSON from environment variable (RECOMMENDED for production/deployment)
# Paste your entire service account JSON file content here as a single-line JSON string
# You can get this JSON from Google Cloud Console > IAM & Admin > Service Accounts
# Example: GOOGLE_SERVICE_ACCOUNT_JSON='{"type":"service_account","project_id":"your-project",...}'
GOOGLE_SERVICE_ACCOUNT_JSON=

# Option 2: Use service account file path (alternative to Option 1)
# GOOGLE_SERVICE_ACCOUNT_FILE=config/google_credentials.json

# Option 3: Use OAuth credentials from environment variables (for development)
# GOOGLE_OAUTH_CREDENTIALS_JSON='{"client_id":"...","client_secret":"...","redirect_uris":[...]}'
# GOOGLE_OAUTH_TOKEN_JSON='{"token":"...","refresh_token":"...","token_uri":"..."}'

# Option 4: Use OAuth files (legacy - not recommended for deployment)
# GOOGLE_CREDENTIALS_FILE=config/credentials.json
# GOOGLE_TOKEN_FILE=config/token.json

# Pipeline Configuration
REFINER_MAX_INPUT_TOKENS=0
REFINER_DOMAIN_CHUNK=true
REFINER_PLACEHOLDERS=false

# API Configuration
API_MAX_RETRIES=6
API_BACKOFF_START=1.0
API_BACKOFF_CAP=8.0

# Output Directories
# Leave empty to use default: backend/data/output
# Or use relative path from backend root (e.g., data/output)
# Or use absolute path (must be within backend directory)
REFINER_OUTPUT_DIR=

# Logging
DEBUG=false

# Cleanup
DISABLE_CLEANUP=0

# File Upload Limits
# Maximum file size in MB (default: 50MB)
MAX_FILE_SIZE_MB=50

# MongoDB Configuration (for analytics storage and user data)
# Get your MongoDB connection string from MongoDB Atlas or MongoDB Compass
# You can use MONGODB_URL, MONGO_URL, or MONGO_URI (all are supported)
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
# Or use MONGO_URI (alternative name)
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
# Optional: Database name (defaults to 'alan_refiner' if not specified)
MONGODB_DB_NAME=alan_refiner

# Stripe Configuration (for payment processing and subscriptions)
# Get your Stripe keys from: https://dashboard.stripe.com/apikeys
# Use test keys (sk_test_...) for development, live keys (sk_live_...) for production
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
# Webhook secret from Stripe Dashboard > Developers > Webhooks
# Create a webhook endpoint pointing to: https://your-backend-url.com/stripe/webhook
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

